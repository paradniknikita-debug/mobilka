# ============================================
# Production — docker-compose.prod.yml (корень проекта)
# ============================================
# Скопируйте в .env.production и подставьте реальные значения.
# Запуск: docker compose -f docker-compose.prod.yml --env-file .env.production up -d
# НЕ коммитьте .env.production.

POSTGRES_DB=lepm_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<надёжный пароль>

DATABASE_URL=postgresql://postgres:PASSWORD@postgres:5432/lepm_db
REDIS_URL=redis://redis:6379
SECRET_KEY=<сгенерируйте длинный ключ>
ENVIRONMENT=production
CORS_ORIGINS=https://your-domain.com
TZ=Europe/Moscow
