# ============================================
# Production (backend)
# ============================================
# Используется с docker-compose.prod.yml.
# Скопируйте в .env.production и заполните реальными значениями.
# НЕ коммитьте .env.production с секретами.

DATABASE_URL=postgresql://USER:PASSWORD@postgres:5432/DBNAME
SECRET_KEY=<сгенерируйте: python -c "import secrets; print(secrets.token_urlsafe(32))">
REDIS_URL=redis://redis:6379
ENVIRONMENT=production

# Обязательно для прода: разрешённые origins через запятую (без пробелов после запятой)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Опционально
TZ=Europe/Moscow
